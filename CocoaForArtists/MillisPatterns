#import "CFACanvas.h"
@interface CFACanvas (private)
float scale;
@end

@implementation CFACanvas
-(void)setup {
	[self drawStyle:ANIMATED];
	[self windowWidth:400 andHeight:400];
	[CFAShape noStroke];
	scale = [self width]/20;
}

-(void)draw {
	for(int i = 0; i < scale; i++) {
		int scalefactor = (int)((i+1) * scale *10);
		int color = [CFADateTime millis]%(scalefactor);
		color = [CFAMath map:color fromMin:0 max:scalefactor toMin:0 max:255];
		[CFAShape fill:color];
		[CFAShape rectWithXPos:i*scale yPos:0 width:scale andHeight:[self height]];
	}
}
@end