#import "CFACanvas.h"
@implementation CFACanvas
-(void)setup {
	[self windowWidth:400 andHeight:400];
	[self drawStyle:EVENTBASED];
	[self background:0.15f];
	[CFAShape noStroke];
	[CFAShape rectMode:CENTER];
}

-(void)draw {
	[self background:0.15f];
	[CFAShape fill:1.0f alpha:0.8f];
	[CFAShape rectWithXPos:mousePos.x yPos:[self height]/2 width:mousePos.y/2+10 andHeight:mousePos.y/2+10];
	int inverseX = [self width]-mousePos.x;
	int	inverseY = [self height]-mousePos.y;
	[CFAShape rectWithXPos:inverseX yPos:[self height]/2 width:inverseY/2+10 andHeight:inverseY/2+10];
}
@end